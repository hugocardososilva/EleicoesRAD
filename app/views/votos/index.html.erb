<h1>Listing votos</h1>

<table>
  <thead>
    <tr>
      <th>Candidato</th>
      <th>Eleitor</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votos.each do |voto| %>
      <tr>
        <td><%= voto.candidato.nome %></td>
        <td><%= voto.eleitor.nome  %></td>
       
        <td><%= link_to 'Show', voto %></td>
        <td><%= link_to 'Edit', edit_voto_path(voto) %></td>
        <td><%= link_to 'Destroy', voto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
     <%= paginate @votos %>

<br>

<%= link_to 'New Voto', new_voto_path %>
